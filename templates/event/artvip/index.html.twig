{% extends 'baseVIPBack.html.twig' %}
{% block body %}
    <div style="clear:both"></div>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-24">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Affichage <img src="{{asset ('afficheicon.png')}}"width="50" height="50"></h4>

                        </div>
                        <div class="card-body table-responsive">
                            <table class="table table-hover" id="t">
                                <thead class="text-warning">
                                <tr>
        <th>artID</th>
        <th>art_nom</th>
        <th>art_description</th>
        <th>reference</th>
    </tr>
                                </thead>
                                <tbody id="myTable">
    {% for i in list1 %}
        <tr>
            <td>{{i.artID}}</td>
            <td>{{i.artnom}}</td>
            <td>{{i.artdescription}}</td>
            <td>{{i.reference}}</td>
            <td><a href="{{path('update',{'artID':i.artID})}}"><button>Modifier</button></a></td>
            <td><a href="{{path('supp_article',{'artID':i.artID})}}"><button>Supprime</button></a></td>
        </tr>

    {% endfor %}

                            </table>


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                </table>
            </div>
        </div>
    </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>

{% endblock %}
