{% extends 'baseBack.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1 style="color:#542167";><b>Event</b></h1>

    <table class="table" border="2">
        <tbody>
            <tr>
                <th style="color:#AA74BE";>Nom Event</th>
                <td>{{ event.nomev }}</td>
            </tr>
            <tr>
                <th style="color:#AA74BE";>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th style="color:#AA74BE";>Date Debut</th>
                <td>{{ event.datedeb }}</td>
            </tr>
            <tr>
                <th style="color:#AA74BE";>Date Fin</th>
                <td>{{ event.datefin }}</td>
            </tr>
            <tr>
                <th style="color:#AA74BE";>Image</th>
                <td><img src={{asset('uploads/images/'  ~ event.imagename ) }} width="10%"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_event_index') }}">Back to list</a>

    <a class="btn btn-primary" href="{{ path('app_event_edit', {'id': event.id}) }}">Edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
