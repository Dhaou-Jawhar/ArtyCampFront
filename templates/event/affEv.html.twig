{% extends 'baseFront.html.twig' %}

{% block hero %}
    <section id="hero" class="hero d-flex flex-column justify-content-center align-items-center" data-aos="fade" data-aos-delay="1500">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <h2>Liste des<span>Evenements</span> </h2>
                    <h2> Art is the highest form of Hope </h2>
                    <p> I dream my painting and paint my dream.</p>
                    <!--<a href="contact.html" class="btn-get-started">Available for hire</a> -->
                </div>
            </div>
        </div>
    </section><!-- End Hero Section -->
{% endblock %}

{% block body %}
    <main id="main" data-aos="fade" data-aos-delay="1500">

    <!-- ======= Gallery Section ======= -->
    <section id="gallery" class="gallery">
        <div class="container-fluid">
            <div class="row gy-4 justify-content-center">
                {% for event in events %}
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="gallery-item h-100">
                        <img src="{{asset('uploads/images/'  ~event.imagename)}}" class="img-fluid" alt="">
                        <div class="gallery-links d-flex align-items-center justify-content-center">
                            <h4 style="color:#f0f0f0";>Nom: {{ event.nomev }} </h4>
                            <h4 style="color:#f0f0f0";>Description: {{ event.description }} </h4>
                            <a href="assets/img/gallery/novel.jpg" title="Novel" class="glightbox preview-link"><i class="bi bi-arrows-angle-expand"></i></a>
                            <a href="gallery-single.html" class="details-link"><i class="bi bi-link-45deg"></i></a>
                        </div>
                    </div>
                </div><!-- End Gallery Item -->
                {% endfor %}
            </div>

        </div>
    </section><!-- End Gallery Section -->

{% endblock %}